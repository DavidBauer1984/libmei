            <schemaSpec ident="mei" start="mei meiHead meiCorpus music" ns="http://www.music-encoding.org/ns/mei">  
                <moduleRef key="MEI"/>
                <moduleRef key="MEI.analytical"/>
                <moduleRef key="MEI.cmn"/>
                <moduleRef key="MEI.cmnOrnaments"/>
                <moduleRef key="MEI.corpus"/>
                <moduleRef key="MEI.critapp"/>
                <moduleRef key="MEI.drama"/>
                <moduleRef key="MEI.edittrans"/>
                <moduleRef key="MEI.externalsymbols"/>
                <moduleRef key="MEI.facsimile"/>
                <moduleRef key="MEI.figtable"/>
                <moduleRef key="MEI.fingering"/>
                <moduleRef key="MEI.frbr"/>
                <moduleRef key="MEI.gestural"/>
                <moduleRef key="MEI.harmony"/>
                <moduleRef key="MEI.header"/>
                <moduleRef key="MEI.lyrics"/>
                <moduleRef key="MEI.mensural"/>
                <moduleRef key="MEI.midi"/>
                <moduleRef key="MEI.namesdates"/>
                <moduleRef key="MEI.neumes"/>
                <moduleRef key="MEI.performance"/>
                <moduleRef key="MEI.ptrref"/>
                <moduleRef key="MEI.shared"/>
                <moduleRef key="MEI.tablature"/>
                <moduleRef key="MEI.text"/>
                <moduleRef key="MEI.usersymbols"/>
                <moduleRef key="MEI.visual"/>
                
                <moduleRef key="MEI.pageBased"/>
                
                <!-- Customizations -->
                <moduleSpec ident="MEI.pageBased" mode="add">
                    <desc/>
                </moduleSpec>
                <classSpec ident="model.pagesLike" type="model" module="MEI.pageBased" mode="add">
                    <desc>Collects pagesLike elements.</desc>
                </classSpec>
                <classSpec ident="model.pageLike" type="model" module="MEI.pageBased" mode="add">
                    <desc>Collects pageLike elements.</desc>
                </classSpec>
                <classSpec ident="model.systemLike" type="model" module="MEI.pageBased" mode="add">
                    <desc>Collects systemLike elements.</desc>
                </classSpec>
                <classSpec ident="model.scbLike" type="model" module="MEI.pageBased" mode="add">
                    <desc>Collects scbLike (section breaks) elements.</desc>
                </classSpec>
                <classSpec ident="att.surface" module="MEI.pageBased" type="atts" mode="add">
                    <desc>This attribute is used to point to a surface.</desc>
                    <attList>
                        <attDef ident="surface" usage="opt">
                            <desc>contains a reference to a surface element</desc>
                            <datatype>
                                <rng:ref name="data.URI"/>
                            </datatype>
                        </attDef>
                    </attList>
                </classSpec>
                <elementSpec ident="pages" module="MEI.pageBased" mode="add">
                    <desc>A set of pages in a page-based encoding</desc>
                    <classes>
                        <memberOf key="att.common.anl"/>
                        <memberOf key="att.common"/>
                        <memberOf key="att.typed"/>
                        <memberOf key="model.pagesLike"/>
                    </classes>
                    <content>
                        <rng:zeroOrMore>
                            <rng:ref name="model.pageLike"/>
                        </rng:zeroOrMore>
                    </content>
                </elementSpec>
                <elementSpec ident="page" module="MEI.pageBased" mode="add">
                    <desc>A page in a page-base encoding</desc>
                    <classes>
                        <memberOf key="att.common.anl"/>
                        <memberOf key="att.scoreDef.vis"/>
                        <memberOf key="att.common"/>
                        <memberOf key="att.pageRef"/>
                        <memberOf key="att.surface"/>
                        <memberOf key="model.pageLike"/>
                    </classes>
                    <content>
                        <rng:zeroOrMore>
                            <rng:ref name="model.systemLike"/>
                        </rng:zeroOrMore>
                    </content>
                    <attList>
                        <attDef ident="position" usage="opt">
                            <desc>This attribute specifies whereas the positionning of the elements is absolute or relative to its parent.</desc>
                            <valList type="closed">
                                <valItem ident="relative">
                                    <desc>indicates that the positionning is relative</desc>
                                </valItem>
                                <valItem ident="absolute">
                                    <desc>indicates that the positionning is absolute</desc>
                                </valItem>
                            </valList>
                        </attDef>
                    </attList>
                </elementSpec>
                <elementSpec ident="system" module="MEI.pageBased" mode="add">
                    <desc>A system in a page-based encoding</desc>
                    <classes>
                        <memberOf key="att.scoreDef.vis"/>
                        <memberOf key="att.common"/>
                        <memberOf key="att.systemRef"/>
                        <memberOf key="att.coordinated"/>
                        <memberOf key="att.visualoffset.vo"/>
                        <memberOf key="att.visualoffset2.ho"/>
                        <memberOf key="model.systemLike"/>
                    </classes>
                    <content>
                        <!-- we expect a system to start with a staffGrp. It is optional, however if identical from the previous system -->
                        <rng:optional>
                            <rng:ref name="model.staffGrpLike"/>
                        </rng:optional>
                        <!-- then the actual content of a system -->
                        <rng:zeroOrMore>
                            <rng:choice>
                                <!-- section are turned into milestones -->
                                <rng:ref name="model.scbLike"/>
                                <!-- measures for measured music -->
                                <rng:ref name="model.measureLike"/>
                                <!-- staves for un-measured music -->
                                <rng:ref name="model.staffLike"/>
                                <!-- scoreDef for redefinition -->
                                <rng:ref name="model.scoreDefLike"/>
                                <!-- anything else? -->
                            </rng:choice>
                        </rng:zeroOrMore>
                    </content>
                </elementSpec>
                <!-- because the hierarchy is flipped, &lt;section&gt; has to become a milestone -->
                <elementSpec ident="secb" module="MEI.pageBased" mode="add">
                    <desc>A section break milestone element</desc>
                    <classes>
                        <memberOf key="att.common"/>
                        <memberOf key="model.scbLike"/>
                    </classes>
                </elementSpec>
                <!-- Changes to preexisting elements -->
                <!-- Replacing att.facsimile for making it member of att.coordinated - probably not the best way to do this? -->
                <classSpec ident="att.facsimile" module="MEI.facsimile" type="atts" mode="replace">
                    <desc>Attributes that associate a feature corresponding with all or part of an image.</desc>
                    <classes>
                        <memberOf key="att.coordinated"/>
                    </classes>
                    <attList>
                        <attDef ident="facs" usage="opt">
                            <desc>permits the current element to reference a facsimile image or image zone which corresponds to it.</desc>
                            <datatype>
                                <rng:ref name="data.URIS"/>
                            </datatype>
                        </attDef>
                    </attList>
                </classSpec>
                <!-- changing mdiv for adding &lt;pages&gt; a possible child -->
                <elementSpec ident="mdiv" module="MEI.shared" mode="change">
                    <desc>(musical division) – contains a subdivision of the body of a musical text.
                        <!--The mdiv element may contain one or both of 2 possible views of the
        music. The score view is the traditional full and open score while the parts view contains
        each performer's view of the score; that is, his part. These 2 views are necessary because
        it is not always possible or desirable to generate one from the other. The score and parts
        elements are placed here and not directly within the body element because score and part
        characteristics may change from mdiv to mdiv. For example, the 2nd movement of a symphony
        may require different performing forces (and therefore different score and part layout) than
        the other movements. The mdiv element may be recursively nested in order to represent music
        which exhibits this kind of structure. For example, an opera is normally divided into acts,
        which are in turn divided into scenes. This may be represented by the following markup:
        &lt;mdiv&gt; &lt;- the opera &lt;mdiv&gt; &lt;- act I &lt;mdiv&gt; &lt;- scene i
        &lt;mdiv&gt; &lt;- scene ii &lt;/mdiv&gt; &lt;mdiv&gt; &lt;- act II &lt;mdiv&gt; &lt;- scene
        i &lt;mdiv&gt; &lt;- scene ii &lt;/mdiv&gt; &lt;/mdiv&gt;--></desc>
                    <classes>
                        <memberOf key="att.common"/>
                        <memberOf key="att.declaring"/>
                        <memberOf key="att.facsimile"/>
                        <memberOf key="att.typed"/>
                        <memberOf key="model.mdivLike"/>
                    </classes>
                    <content>
                        <rng:choice>
                            <rng:group>
                                <rng:optional>
                                    <rng:ref name="model.scoreLike"/>
                                </rng:optional>
                                <rng:optional>
                                    <rng:ref name="model.partsLike"/>
                                </rng:optional>
                                <rng:optional>
                                    <rng:ref name="model.pagesLike"/>
                                </rng:optional>
                            </rng:group>
                            <rng:zeroOrMore>
                                <rng:ref name="model.mdivLike"/>
                            </rng:zeroOrMore>
                        </rng:choice>
                    </content>
                </elementSpec>
                
                <!-- Neume customization -->
                <!-- https://github.com/music-encoding/neume-ig/blob/0190e92cfde2782398b2159621824831ed2507a2/mei-Neumes_DEV.odd -->
                
                <classSpec ident="att.neume.anl" module="MEI.analytical" type="atts" mode="replace">
                    <desc>Analytical domain attributes.</desc>
                    <classes>
                        <memberOf key="att.harmonicFunction"/>
                        <memberOf key="att.intervalMelodic"/>
                        <memberOf key="att.melodicFunction"/>
                        <memberOf key="att.solfa"/>
                    </classes>
                </classSpec>
                <classSpec ident="att.neume.ges" module="MEI.gestural" type="atts" mode="replace">
                    <desc>Gestural domain attributes.</desc>
                </classSpec>
                <classSpec ident="att.neume.log" module="MEI.neumes" type="atts" mode="replace">
                    <desc>Logical domain attributes.</desc>
                    <classes>
                        <memberOf key="att.event"/>
                        <memberOf key="att.sylText"/>
                    </classes>
                    <attList>
                        <attDef ident="name" usage="opt">
                            <datatype>
                                <rng:data type="NMTOKEN"/>
                            </datatype>
                            <valList type="semi">
                                <valItem ident="apostropha"/>
                                <valItem ident="bistropha"/>
                                <valItem ident="climacus"/>
                                <valItem ident="clivis"/>
                                <valItem ident="oriscus"/>
                                <valItem ident="pes"/>
                                <valItem ident="pessubpunctis"/>
                                <valItem ident="porrectus"/>
                                <valItem ident="porrectusflexus"/>
                                <valItem ident="pressusmaior"/>
                                <valItem ident="pressusmaior"/>
                                <valItem ident="pressusminor"/>
                                <valItem ident="pressusminor"/>
                                <valItem ident="punctum"/>
                                <valItem ident="scandicus"/>
                                <valItem ident="torculus"/>
                                <valItem ident="torculusresupinus"/>
                                <valItem ident="tristropha"/>
                                <valItem ident="virga"/>
                                <valItem ident="virgastrata"/>
                            </valList>
                        </attDef>
                    </attList>
                </classSpec>
                <!-- Attributes in att.neume.vis need documentation/description -->
                <classSpec ident="att.neume.vis" module="MEI.visual" type="atts" mode="replace">
                    <desc>Visual domain attributes.</desc>
                    <classes>
                        <memberOf key="att.altSym"/>
                        <memberOf key="att.color"/>
                        <memberOf key="att.extSym"/>
                        <memberOf key="att.staffLoc"/>
                        <memberOf key="att.typography"/>
                        <memberOf key="att.visibility"/>
                        <memberOf key="att.visualOffset.ho"/>
                        <memberOf key="att.xy"/>
                    </classes>
                    <attList>
                        <attDef ident="hispanicloop">
                            <desc/>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="significativeletters">
                            <desc/>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                    </attList>
                </classSpec>
                <elementSpec ident="neume" module="MEI.neumes" mode="replace">
                    <desc>Sign representing one or more musical pitches.</desc>
                    <classes>
                        <memberOf key="att.common"/>
                        <memberOf key="att.facsimile"/>
                        <memberOf key="att.neume.log"/>
                        <memberOf key="att.neume.vis"/>
                        <memberOf key="att.neume.ges"/>
                        <memberOf key="att.neume.anl"/>
                        <memberOf key="model.eventLike.neumes"/>
                    </classes>
                    <content>
                        <rng:zeroOrMore>
                            <rng:choice>
                                <rng:ref name="nc"/>
                                <rng:ref name="macro.neumeModifierLike"/>
                                <rng:ref name="model.appLike"/>
                                <rng:ref name="model.editLike"/>
                                <rng:ref name="model.transcriptionLike"/>
                                <rng:ref name="model.verseLike"/>
                            </rng:choice>
                        </rng:zeroOrMore>
                    </content>
                    <!--<attList>
                        <attDef ident="name" usage="opt">
                        <datatype>
                        <rng:data type="NMTOKEN"/>
                        </datatype>
                        <valList type="semi">
                        <valItem ident="apostropha"/>
                        <valItem ident="bistropha"/>
                        <valItem ident="climacus"/>
                        <valItem ident="clivis"/>
                        <valItem ident="oriscus"/>
                        <valItem ident="pes"/>
                        <valItem ident="pessubpunctis"/>
                        <valItem ident="porrectus"/>
                        <valItem ident="porrectusflexus"/>
                        <valItem ident="pressusmaior"/>
                        <valItem ident="pressusmaior"/>
                        <valItem ident="pressusminor"/>
                        <valItem ident="pressusminor"/>
                        <valItem ident="punctum"/>
                        <valItem ident="scandicus"/>
                        <valItem ident="torculus"/>
                        <valItem ident="torculusresupinus"/>
                        <valItem ident="tristropha"/>
                        <valItem ident="virga"/>
                        <valItem ident="virgastrata"/>
                        </valList>
                        </attDef>
                        </attList>-->
                </elementSpec>
                
                <classSpec ident="att.nc.anl" module="MEI.analytical" type="atts" mode="replace">
                    <desc>Analytical domain attributes.</desc>
                    <classes>
                        <memberOf key="att.accidental"/>
                        <memberOf key="att.harmonicFunction"/>
                        <memberOf key="att.intervalMelodic"/>
                        <memberOf key="att.melodicFunction"/>
                        <memberOf key="att.pitchClass"/>
                        <memberOf key="att.solfa"/>
                    </classes>
                </classSpec>
                <classSpec ident="att.nc.ges" module="MEI.gestural" type="atts" mode="replace">
                    <desc>Gestural domain attributes.</desc>
                </classSpec>
                <classSpec ident="att.nc.log" module="MEI.neumes" type="atts" mode="replace">
                    <desc>Logical domain attributes.</desc>
                    <classes>
                        <memberOf key="att.pitched"/>
                    </classes>
                </classSpec>
                <!-- Attributes in att.nc.vis need documentation/description -->
                <classSpec ident="att.nc.vis" module="MEI.visual" type="atts" mode="replace">
                    <desc>Visual domain attributes.</desc>
                    <classes>
                        <memberOf key="att.altSym"/>
                        <memberOf key="att.color"/>
                        <memberOf key="att.extSym"/>
                        <memberOf key="att.staffLoc"/>
                        <memberOf key="att.typography"/>
                        <memberOf key="att.visibility"/>
                        <memberOf key="att.visualOffset.ho"/>
                        <memberOf key="att.xy"/>
                    </classes>
                    <attList>
                        <attDef ident="angled" usage="opt">
                            <desc>The shape of the neume component is angled or has a bend.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="con" usage="opt">
                            <desc>Connection to the previous component within the same neume.</desc>
                            <constraintSpec ident="nc_connection" scheme="isoschematron">
                                <constraint>
                                    <sch:rule context="mei:nc[@con]">
                                        <sch:let name="ncPosition" value="count(preceding-sibling::mei:nc) + 1"/>
                                        <sch:assert test="not($ncPosition = 1)">The @con attribute is not allowed on the
                                            first component of a neume.</sch:assert>
                                    </sch:rule>
                                </constraint>
                            </constraintSpec>
                            <valList type="closed">
                                <valItem ident="g">
                                    <desc>Gapped; not connected.</desc>
                                </valItem>
                                <valItem ident="l">
                                    <desc>Looped.</desc>
                                </valItem>
                            </valList>
                        </attDef>
                        <attDef ident="curved" usage="opt">
                            <desc>The shape of the neume component is curved, often a half circle.</desc>
                            <valList type="closed">
                                <valItem ident="a">
                                    <desc>Anti-clockwise curvature.</desc>
                                </valItem>
                                <valItem ident="c">
                                    <desc>Clockwise curvature.</desc>
                                </valItem>
                            </valList>
                        </attDef>
                        <attDef ident="diagonalright" usage="opt">
                            <desc>The shape of the neume component is a diagonal line either going up or
                                down.</desc>
                            <valList type="closed">
                                <valItem ident="u">
                                    <desc>A diagonal line right up, as in Virga.</desc>
                                </valItem>
                                <valItem ident="d">
                                    <desc>A diagonal line right down.</desc>
                                </valItem>
                            </valList>
                        </attDef>
                        <attDef ident="episema" usage="opt">
                            <desc>A line segment attached.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="extended" usage="opt">
                            <desc>The shape of the neume component is longer than normal.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="flat" usage="opt">
                            <desc>The shape of the neume component is a horizontal line segment.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="jagged" usage="opt">
                            <desc>The shape of the neume component is jagged.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="liquescent" usage="opt">
                            <desc>The neume component is a liquescent.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="oriscus" usage="opt">
                            <desc>The neume component is an oriscus.</desc>
                            <valList type="closed">
                                <valItem ident="c">
                                    <desc>Curved.</desc>
                                </valItem>
                                <valItem ident="f">
                                    <desc>Flat.</desc>
                                </valItem>
                                <valItem ident="j">
                                    <desc>Jagged.</desc>
                                </valItem>
                                <valItem ident="unknown">
                                    <desc>Unknown or unspecified.</desc>
                                </valItem>
                            </valList>
                        </attDef>
                        <attDef ident="quilisma" usage="opt">
                            <desc>The neume component is a quilisma.</desc>
                            <valList type="closed">
                                <valItem ident="2">
                                    <desc>2 curves.</desc>
                                </valItem>
                                <valItem ident="3">
                                    <desc>3 curves.</desc>
                                </valItem>
                                <valItem ident="unknown">
                                    <desc>Unknown or unspecified.</desc>
                                </valItem>
                            </valList>
                        </attDef>
                        <attDef ident="strophicus" usage="opt">
                            <desc>The neueme component is a strophicus.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                        <attDef ident="wavy" usage="opt">
                            <desc>The shape of the neume component is wavy.</desc>
                            <datatype>
                                <rng:ref name="data.BOOLEAN"/>
                            </datatype>
                        </attDef>
                    </attList>
                </classSpec>
                <elementSpec ident="nc" module="MEI.neumes" mode="replace">
                    <desc>Sign representing a single pitched event, although the exact pitch may not be
                        known.</desc>
                    <classes>
                        <memberOf key="att.common"/>
                        <memberOf key="att.facsimile"/>
                        <memberOf key="att.nc.log"/>
                        <memberOf key="att.nc.vis"/>
                        <memberOf key="att.nc.ges"/>
                        <memberOf key="att.nc.anl"/>
                    </classes>
                    <content>
                        <rng:empty/>
                    </content>
                </elementSpec>
                
            </schemaSpec>
        </body>
    </text>
